<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_my_location_light_blue_a700_18dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="false"
            android:text="Location Updates"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_location_on_coloraccent_24dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="false"
            android:text="Address"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="false"
            android:text="sehggshdgdhgjhgjfhgjfghfjg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="false"
            android:text="Last Updated"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lastupdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="false"
            android:text="Last Updated" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_power_settings_coloraccent_24dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="false"
            android:text="Status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp"
            android:singleLine="false"
            android:text="Status" />
    </LinearLayout>
</LinearLayout>